<mvc:View controllerName="logaligroup.sapui54.controller.InvoicesList" 
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc">
<List headerText="{i18n>invoiceListTitle}" class="sapUiResponsiveMargin" width="auto" items="{northwind>/Invoices}">
<items>
<ObjectListItem title="{northwind>ProductName}" 
                number="{
                            parts : [ {path:'northwind>ExtendedPrice'},{path:'currency>/usd'}],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: {showMeasure: false}
                        }"
                        numberUnit="{currency>/usd}"
                        numberState="{ =$northwind>ExtendedPrice } > 50  ? 'Success' :'Error'"
                        type="Navigation"
                        press="navigateToDetails"> 
<!--<firstStatus><ObjectStatus text="{ path: 'invoices>Status',
                                 formatter : '/formatter.invoiceStatus' }"></ObjectStatus>
</firstStatus>-->
</ObjectListItem>
</items>
</List>
</mvc:View> 



 